        <attr name="imgBottom" format="reference"/>
        <attr name="buttonText" format="string"/>
        <attr name="buttonTextAllCaps" format="boolean"/>
        <attr name="buttonTextColor" format="color"/>
        <attr name="buttonImgTint" format="color"/>
        <attr name="buttonFontFamily" format="string"/>
